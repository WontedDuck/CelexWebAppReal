<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCelex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CelexWebApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>

        <!-- Fondo animado con partículas y efectos geométricos -->
        <canvas id="particleCanvas" style="position: fixed; top: 0; left: 0; z-index: -2; width: 100%; height: 100%;"></canvas>
        <canvas id="geometricCanvas" style="position: fixed; top: 0; left: 0; z-index: -1; width: 100%; height: 100%;"></canvas>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px); border-radius: 15px; padding: 10px 20px; max-width: 900px; margin: 0 auto 20px; box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: #FFFFFF;">MyCelex</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: #FFFFFF;">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #FFFFFF;">Privacidad</a>
                        </li>
                        @{
                            var idRol = Context.Session.GetString("id_rol");
                        }
                        @if (idRol == "3")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Grupos" asp-action="Index" style="color: #FFFFFF;">Ver Grupos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="RegistroGrupos" asp-action="Index" style="color: #FFFFFF;">Ver Registros de Grupos</a>
                            </li>
                        }
                        @if (idRol == "2")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Libros" asp-action="Index" style="color: #FFFFFF;">Ver Libros</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <span>
                &copy; 2025 - MyCelex - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
            </span>
            <form asp-controller="Home" asp-action="BorrarCuenta" method="post" onsubmit="return confirm('¿Estás seguro de que deseas borrar tu cuenta? Este cambio no es reversible.');" style="margin:0;">
                <button type="submit" class="btn btn-danger btn-sm">Borrar Cuenta</button>
            </form>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
    <!-- Modal Glassmorphism -->
    <div id="customAlertOverlay" style="display:none;">
        <div id="customAlertModal">
            <div id="customAlertMessage"></div>
            <button id="customAlertButton">Aceptar</button>
        </div>
    </div>


    <script>
        window.customAlert = function(message, buttonText = "Aceptar") {
            return new Promise(resolve => {
                const overlay = document.getElementById('customAlertOverlay');
                const modal = document.getElementById('customAlertModal');
                const msg = document.getElementById('customAlertMessage');
                const btn = document.getElementById('customAlertButton');
                msg.textContent = message;
                btn.textContent = buttonText;
                overlay.style.display = 'flex';
                btn.focus();
                btn.onclick = () => {
                    overlay.style.display = 'none';
                    resolve();
                };
            });
        };

        // Opcional: Sobrescribe alert() globalmente
        window.alert = window.customAlert;
    </script>

</body>
</html>